<h1>Will you be my Valentine? üíï</h1>
<button class="yes" onclick="page2()">Yes</button>
<button class="no">No</button>

<script>
function page2(){
  document.body.innerHTML=`
  <h1>Hold the heart ‚ù§Ô∏è</h1>
  <div class="heart" 
    onmousedown="start()" 
    onmouseup="stop()">‚ù§Ô∏è</div>
  <div class="bar"><div class="fill" id="fill"></div></div>
  `;
}

let i=0, timer;
function start(){
  timer=setInterval(()=>{
    if(i>=100){page3();clearInterval(timer);}
    i+=1;
    document.getElementById("fill").style.width=i+"%";
  },30);
}
function stop(){clearInterval(timer);}

function page3(){
  document.body.innerHTML=`
    <h1>Yes, I knew it üíñ</h1>
    <h2>You will be my Valentine üß∏üß∏</h2>
  `;
  setInterval(()=>{
    let r=document.createElement("div");
    r.className="petal";
    r.innerHTML="üåπ";
    r.style.left=Math.random()*100+"vw";
    r.style.animationDuration="6s";
    document.body.appendChild(r);
    setTimeout(()=>r.remove(),6000);
  },900);
}
</script>

